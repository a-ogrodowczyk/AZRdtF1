{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText1",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "lastmistake",
						"type": "DatasetReference"
					},
					"name": "source2"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivoerrors"
				}
			],
			"scriptLines": [
				"source(output(",
				"          datetime as timestamp,",
				"          machineID as integer,",
				"          volt as double,",
				"          rotate as double,",
				"          pressure as double,",
				"          vibration as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source(output(",
				"          datetime as string,",
				"          machineID as string,",
				"          errorID as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source2",
				"source2 pivot(groupBy(datetime,",
				"          machineID),",
				"     pivotBy(errorID),",
				"     zygmunt = count(errorID),",
				"     columnNaming: '$N$V',",
				"     lateral: false) ~> pivoerrors"
			]
		}
	}
}